<h1>Create a new weigh-in below:</h1>

<%= simple_form_for entry do |f| %>
  <%= f.input :weight %>
  <%= f.input :date, as: :date, html5: true %>
  <%= f.input :user_id, as: :hidden, input_html: { value: current_user.id } %>

  <%= f.button :submit, 'Enter Weight', class: 'btn btn-primary' %>
<% end %>